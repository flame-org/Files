{
  "name": "flame/files",
  "type": "nette-module",
  "description": "Basic classes with working with file system",
  "keywords": ["files", "nette", "filesystem", "flame", "tools"],
  "homepage": "https://github.com/flame-org/Files",

  "authors": [
    {
      "name": "Jiří Šifalda",
      "homepage": "http://jsifalda.name/"
    }
  ],

  "support": {
    "email": "flame@jsifalda.name",
    "issues": "https://github.com/flame-org/Files/issues"
  },

  "require": {
    "php": ">=5.3.2",
    "nette/nette": ">=2.0.0",
    "flame/modules": ">=0.5.0",
    "flame/module-installer": ">=0.1.0"
  },

  "config": {
    "vendor-dir": "libs"
  },

  "autoload": {
    "psr-0": {
      "Flame": ""
    },
    "classmap": ["Flame/Files/exceptions.php"],
    "files": ["Flame/Files/compatibility.php"]
  },

  "extra": {
    "module": {
      "class": "Flame\\Files\\DI\\FilesExtension"
    }
  }
}